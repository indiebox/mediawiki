{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/wiki",
            "depends" : [
                "php",
                "php-apache",
                "php-gd",
                "php-intl"
            ],
            "apache2modules" : [
                "php7",
                "rewrite"
            ],
            "phpmodules" : [
                "gd",
                "iconv",
                "intl",
                "mysqli",
                "pdo_mysql"
            ],
            "wellknown" : {
                "robotstxt" : {
                    "disallow" : [
                        "/_mediawiki/"
                    ]
                }
            },
            "appconfigitems" : [
                {
                    "type" : "directory",
                    "name" : "_mediawiki"
                },
                {
                    "type" : "directory",
                    "names" : [
                        "_mediawiki/ubos-accessories",
                        "_mediawiki/ubos-images",
                        "_mediawiki/ubos-skins",
                        "_mediawiki/extensions"
                    ]
                },
                {
                    "type" : "directory",
                    "name" : "_mediawiki/images",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "imagedir",
                    "mode" : "0755",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}"
                },
                {
                    "type"  : "symlink",
                    "names" : [
                        "api.php",
                        "autoload.php",
                        "img_auth.php",
                        "includes",
                        "index.php",
                        "languages",
                        "load.php",
                        "opensearch_desc.php",
                        "profileinfo.php",
                        "resources",
                        "skins",
                        "thumb.php",
                        "thumb_handler.php",
                        "vendor",
                        "Gruntfile.js"
                    ],
                    "source" : "mediawiki/$2"
                },
                {
                    "type"  : "symlink",
                    "name" : "_mediawiki/ubos-skins/Vector",
                    "source" : "mediawiki/skins/$2"
                },
                {
                    "type"   : "symlink",
                    "name"   : "_mediawiki/ubos-images/mediawiki.png",
                    "source" : "mediawiki/resources/assets/mediawiki.png"
                },
                {
                    "type"         : "file",
                    "name"         : "LocalSettings.php",
                    "template"     : "tmpl/LocalSettings.php.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "file",
                    "name"         : "AdminSettings.php",
                    "template"     : "tmpl/AdminSettings.php.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "file",
                    "name"         : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.pl",
                    "templatelang" : "perlscript"
                },
                {
                    "type" : "directory",
                    "name" : "${appconfig.cachedir}",
                    "mode" : "0755",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}"
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/create-admin.pl"
                }
            ],
            "upgraders" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/upgrade.pl"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"       : "database",
                    "name"       : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges" : "index, create, select, insert, update, delete, alter, lock tables, drop"
                }
            ],
            "installers" : [
                {
                    "name"   : "maindb",
                    "type"   : "sqlscript",
                    "source" : "mediawiki/maintenance/tables.sql"
                }
            ]
        }
    },
    "customizationpoints" : {
        "wikititle" : {
            "name"     : "Wiki Title",
            "type"     : "string",
            "required" : false,
            "default"  : {
                "value" : "My Wiki"
            }
        },
        "wikilogo"     : {
            "name"     : "Wiki Logo",
            "type"     : "image",
            "required" : false,
            "default"  : {
                "value" : null
            }
        }
    }
}


